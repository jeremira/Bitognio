<%= form_with(model: lesson, local: true) do |form| %>

  <% if lesson.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:
      <ul>
        <% lesson.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% @available_teachers.each do |teacher| %>
      <div class="col-xs-6 col-md-4 col-lg-3">
        <%= label :teacher_id, teacher.id, teacher.email %>
        <%= form.radio_button :teacher_id, teacher.id, id: "teacher_id_#{teacher.id}" %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.date_field :date, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= form.time_field :time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.hidden_field :student_id, value: current_user.id %>
  </div>
  <div class="actions">
    <%= form.submit t(:__request_lesson), class: 'btn btn-block btn-custom' %>
  </div>
<% end %>
