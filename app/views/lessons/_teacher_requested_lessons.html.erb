<h2>New requests :</h2>
<table>
  <thead>
    <tr>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.date %></td>
        <td><%= lesson.time %></td>
        <td><%= "New request from #{lesson.student.email}" %></td>
        <td><%= link_to t(:__show), lesson %></td>
        <td><%= link_to t(:__edit), edit_lesson_path(lesson) %></td>
        <td><%= link_to t(:__approve_lesson), approve_lesson_path(lesson), method: :post %></td>
        <td><%= link_to t(:__cancel), lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
