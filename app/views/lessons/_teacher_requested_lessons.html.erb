<% @request_lessons.each do |lesson| %>
  <div class="col-xs-12 col-md-6 col-lg-3">
   <div class="intro-quarter text-center">
     <span class="fa-stack fa-2x color-green">
       <i class="fa fa-square-o fa-stack-2x"></i>
       <i class="fa fa-home fa-stack-1x"></i>
     </span>
     <div class="separate-green"></div>
     <h5><%= lesson.date %></h5>
     <p>New request from <%= link_to lesson.student.email, '#' %></p>
     <%= link_to t(:__approve_lesson), approve_lesson_path(lesson), method: :post, class: 'btn btn-block btn-custom' %>
     <p class="separate-green"><%= link_to t(:__cancel), lesson,
          method: :delete, data: { confirm: 'Are you sure?' } %></p>
   </div>
 </div>
<% end %>
  
