<section class="content-block container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3">
      <h4 class="separate-red">
        <span class="fa-stack color-red">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-home fa-stack-1x"></i>
        </span>
          <%= t('.account_balance', balance: @balance) %>
      </h4>
      <p><%= link_to t(:__payments_history), '#' %></p>
    </div>
  </div>
</section>

<section class="content-block container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3">
      <h4 class="separate-green">
        <span class="fa-stack color-green">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-home fa-stack-1x"></i>
        </span>
        <%= t('.make_a_new_payment') %>
      </h4>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12 col-md-3 offset-md-3">
      <div class="intro-quarter text-center">
        <span class="fa-stack fa-2x color-red">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-home fa-stack-1x"></i>
        </span>
        <div class="separate-red"></div>
        <h5><%= t('.1_hour') %></h3>
        <%= link_to t('.pay_3000'), new_payment_path(amount: 3000), class: 'btn btn-block btn-custom' %>
        <p class="separate-red"><%= t('.pay_3000_explanation') %></p>
      </div>
    </div>
    <div class="col-xs-12 col-md-3">
      <div class="intro-quarter text-center">
        <span class="fa-stack fa-2x color-blue">
          <i class="fa fa-square-o fa-stack-2x"></i>
          <i class="fa fa-home fa-stack-1x"></i>
        </span>
        <div class="separate-blue"></div>
        <h5><%= t('.5_hour') %></h3>
        <%= link_to t('.pay_15000'), new_payment_path(amount: 15000), class: 'btn btn-block btn-custom' %>
        <p class="separate-blue"><%= t('.pay_15000_explanation') %></p>
      </div>
    </div>
  </div>
</section>
