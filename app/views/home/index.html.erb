
    <section class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-md-6 offset-md-6">
          <div class="top-hat">
            <h1 class="root-header"><%= t :app_name %></h1>
          </div>
        </div>
      </div>
    </section>

    <section class="main-block container-fluid root-background bot-space">
      <div class="row bot-space tagline">
        <div class="col-xs-12 col-md-6 offset-md-6">
            <h1><%= t :biz_header %></h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <h2 class="separate-blue tagline"><%= t :app_title %></h2>
          <h6 class="tagline"><%= t :biz_catch %></h6>
          <div class="row">
            <% if current_user %>
              <div class="col-xs-12 col-md-6">
                <%= link_to t(:__lessons), current_user, class: 'btn btn-custom btn-block' %>
              </div>
              <div class="col-xs-12 col-md-6">
                <%= link_to t(:__payments), payments_path, class: 'btn btn-custom btn-block' %>
              </div>
            <% else %>
              <div class="col-xs-12 col-md-6">
                <%= link_to t(:__login), new_user_session_path, class: 'btn btn-custom btn-block' %>
              </div>
              <div class="col-xs-12 col-md-6">
                <%= link_to t(:__signup), new_user_registration_path, class: 'btn btn-custom btn-block' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>

    <section class="container-fluid bot-space">
      <div class="row" id="contact">
        <div class="col-xs-12 col-md-6 offset-md-3">
          <h1 class="separate-yellow">To contact us :</h1>
          <h5>Form to implement here</h5>
        </div>
      </div>
    </section>
